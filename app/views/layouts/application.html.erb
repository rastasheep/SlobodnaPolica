<!DOCTYPE html>
<html>
<head>
  <title><%= yield_or_default(:title, "Slobodna polica")%></title>

  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->
<link href='http://fonts.googleapis.com/css?family=Pacifico' rel='stylesheet' type='text/css'>

  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

</head>
    <script type="text/javascript">
jQuery(document).ready(function() {
      var allCat = [<% for category in categories %>"<%= category %>",<% end %>];
      $('#book_categories').typeahead({source: allCat});
      var allAuth = [<% for author in authors %>"<%= author %>",<% end %>];
      $('#book_author').typeahead({source: allAuth});
    });
    </script>
<body>

<%= render "layouts/navbar" %>


<% flash.each do |name, massage| %>
  <div class="alert <%= "alert-"+name.to_s %>">
    <a class="close" data-dismiss="alert">×</a>
    <span class="badge <%= "badge-"+name.to_s %>">Obaveštenje:</span> <%=  massage%>
  </div>	
<% end %>

<div id="content" class="content"><%= yield %></div>

<%= render "layouts/footer" %>
<%= render "layouts/modals" %>
 
</body>
</html>
