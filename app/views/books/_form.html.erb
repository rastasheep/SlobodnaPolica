 <%= form_for @book do |f| %>
 	<%= f.label :Naslov %>
 	<%= f.text_field :title %>
 	<%= f.label :Autor %>
 	<%= f.text_field :author %>
 	<%= f.label :Informacije %>
 	<%= f.text_field :info, :class => ' thumbnails span4 ' %>
 	<%= f.label :Kategorija %>
 	<%= f.text_field :categories, :data => {:provide=> 'typeahead'}, :autocomplete => 'off' %>
 	<%= f.label :Jezik %>
	<%= f.select :lang, ["Srpski","Engleski"] %>
 	<%= f.label :Link %>
 	<%= f.text_field :webpage %>
 	<%= f.submit %>
 <% end %>	

